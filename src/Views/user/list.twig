{% extends 'base.twig' %}
{% block content %}
    <div class="main_bar">
        <h1>Member List</h1>

        <div id="user_list">
            {% for user in users %}
                <div id="user-{{ user.id }}" class="user_info">
                    <div class="user_avatar">
                        <img src="https://lh3.googleusercontent.com/-VPkhip3osug/AAAAAAAAAAI/AAAAAAAAAHc/w2Ae1JmeUMo/photo.jpg?sz=48">
                    </div>
                    <div class="user_detail">
                        <a href="/user/profile/{{ user.id }}">{{ user.name }}</a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
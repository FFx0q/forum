{% extends 'base.twig' %}
{% block content %}
    <div class="content__wrapper">
        <h1>Member List</h1>

        <div id="user_list">
            {% for user in users %}
                <div id="user-{{ user.id }}" class="user_info">
                    <img src="/uploads/avatars/{{ user.avatar_url }}" class="user__photo_medium">
                    <div class="user_detail">
                        <p><a href="/user/profile/{{ user.id }}">{{ user.name }}</a></p>
                        <p>{{ user.join_date|date('d/m/Y') }}</p>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
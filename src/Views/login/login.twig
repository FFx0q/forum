{% extends 'base.twig' %}
{% block content %}
	<form method="POST" action="/login/login" class="form">
		<h2>Login</h2>

		{% for error in session.errors %}
			<div class="error">{{error}}</div>
		{% endfor %}

		<input type="text" 
			class="form__input"
			name="username" 
		    placeholder="Username"
		/>

		<input type="password" 
			class="form__input"
            name="password" 
		    placeholder="Password"
		/>
    	<input type="submit" value="Log in" aria-label="Log in"/>
		<span>Looking to <a href="/register/">create an account</a> ?</span>

		
	</form>
{% endblock %}
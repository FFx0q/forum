{% extends "settings/settings.twig" %}
{% block settings %}
    <header class="page-header">
        <h2 class="page-title" style="text-align: center;">Change Email</h2>
    </header>

    <form method="post" action="/settings.php?uid={{id}}">

        <div class="input-wrap">
            <span>New password</span>
            <input class="input" type="password" name="password" />
        </div>
        <input class="button" type="submit" value="Save" />
    </form>
{% endblock %}
{% extends 'base.twig' %}
{% block content %}
    <section class="col-sm">
        <h2 class="categoryTitle"><p>Member List</p></h2>
        <ul class="cForums">
        {% for user in users %}
            <li class="cForumRow"> 
                <div class="cForumMain">
                   <a class="cForumTitle" href="/user/profile/{{user.id}}-user"> {{ user.name }} </a>
                </div>
                <div class="cForumStats">
                    <dl>
                        <dt>8</dt>
                        <dd>Posts</dd>
                    </dl>
                </div>
            </li>
        {% endfor %}
    </section>
{% endblock %}
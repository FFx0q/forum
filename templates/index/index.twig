{% extends 'base.twig' %}
{% block content %}
    <section class="col-sm">
        <ol class="List_reset">
            {% for category, subs in data %}
                <li id="category-{{loop.index0}}">
                    <div class="thead">
                        <span class="forumTitle"><a href="/category/forum/{{category}}">{{category|split('-')[1]}}</a></span>
                    </div>
                    <ol class="List_reset">
                        {% for sub in subs %}
                            <li class="trow1">
                                <div class="forumContent">
                                    <h3 class="forumTitle">{{ sub }}</h1>
                                </div>
                            </li>
                        {% endfor %}
                    </ol>
                </li>
            {% endfor %}
        </ol>
    </section>
{% endblock %}

{% extends 'base.twig' %}
{% block content %}
    <section class="col-sm">
        <h2 class="categoryTitle">Topics</h2>
        <ul class="cForumList">
            {% for topic in topics %}
                <li class="cForumRow"> 
                    <div class="cForumIcon">
                        <i class="fas fa-comments"></i>
                    </div>
                    <div class="cForumMain">
                        <a class="cForumTitle" href="/topic/show/{{topic.id}}-topic">{{topic.title}}</a>
                    </div>
                    <div class="cForumStats">
                        <dl>
                            <dt>{{topic.replies}}</dt>
                            <dd>Replies</dd>
                        </dl>
                    </div>             
                </li>
                {% else %}
                    <li class="cForumRow">No topics found</li>
            {% endfor %}
        </ul>
    </section>    
{% endblock %}